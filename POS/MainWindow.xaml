                    </Grid>
                </Button>
                <Button  Margin="10" Height="35" Background="#FF79A6CD" Foreground="White" >
                    <Grid Width="150">
                        <materialDesign:PackIcon Kind="Report" VerticalAlignment="Center" RenderTransformOrigin="1.281,0.531"></materialDesign:PackIcon>
                        <TextBlock Text="Report" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15" Margin="20,0,0,0"></TextBlock>
                    </Grid>
                </Button>
                <Button  Margin="10" Height="35" Background="#FF79A6CD" Foreground="White" Click="Button_Click" >
                    <Grid Width="150">
                        <materialDesign:PackIcon Kind="Logout" VerticalAlignment="Center" RenderTransformOrigin="1.281,0.531"></materialDesign:PackIcon>
                        <TextBlock Text="Logout" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="15" Margin="20,0,0,0"></TextBlock>
                    </Grid>
                </Button>
