                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="Reproduction" VerticalAlignment="Center" RenderTransformOrigin="1.281,0.531" Margin="0,2,0,0.333"></materialDesign:PackIcon>
                        <TextBlock Text="Products" VerticalAlignment="Center" FontSize="15" Margin="0,1" Grid.RowSpan="2" HorizontalAlignment="Right" Width="130"/>
                    </Grid>
                </Button>
                <Button  Margin="10" Height="35" Background="#FF79A6CD" Foreground="White" >
